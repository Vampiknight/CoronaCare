<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:id="@+id/health_check">
    

    
    <TextView
        android:text="Bitte kreuzen Sie Ihre Symptome an:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textSymptome" />
    <CheckBox
        android:text="Fieber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:id="@+id/checkFieber" />
    <CheckBox
        android:text="trockener Husten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:id="@+id/checkHusten" />
    <CheckBox
        android:text="Müdigkeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="110dp"
        android:id="@+id/checkMüdigkeit" />
    <CheckBox
        android:text="Verlust des Geschmackssinns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="140dp"
        android:id="@+id/checkGeschmack" />
    <CheckBox
        android:text="Verlust des Geruchssinns"
        android:layout_width="208.0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="170dp"
        android:id="@+id/checkGeruchssinn" />
    <CheckBox
        android:text="Atembeschwerden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        android:id="@+id/checkAtem" />
    <CheckBox
        android:text="Gliederschmerzen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="320dp"
        android:id="@+id/checkGlieder" />
    <CheckBox
        android:text="Kopfschmerzen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="260dp"
        android:id="@+id/checkKopfschmerzen" />
    <CheckBox
        android:text="Durchfall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="290dp"
        android:id="@+id/checkDurchfall" />
    <CheckBox
        android:text="Druckgefühl im Brustbereich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="230dp"
        android:id="@+id/checkDruckgefühl" />
    <Button
        android:text="überprüfen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="360dp"
        android:id="@+id/buttonCheck" />

    

</RelativeLayout>
